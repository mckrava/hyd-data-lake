{
  "name": "api-tests",
  "description": "Api tests",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "api-codegen:liq-pools": "TARGET=liquidity_pools graphql-codegen --require dotenv/config --config api-codegen-configs/codegen-api-tests.ts",
    "api-codegen:storage-dict": "TARGET=storage_dictionary graphql-codegen --require dotenv/config --config api-codegen-configs/codegen-api-tests.ts",
    "test:liq-pools-api": "TARGET=liquidity_pools jest --config jest-api.js --verbose",
    "test:storage-dict-api": "TARGET=storage_dictionary jest --config jest-api.js --verbose"
  },
  "dependencies": {
    "@galacticcouncil/sdk": "^4.2.1",
    "@polkadot/api": "^14.0.1",
    "@urql/core": "^5.0.8",
    "@urql/exchange-retry": "^1.3.0",
    "bignumber.js": "^9.1.2",
    "cpx2": "^8.0.0",
    "dotenv": "^16.4.5",
    "pg": "^8.11.5",
    "scale-ts": "^1.6.1"
  },
  "devDependencies": {
    "@polkadot/api": "^12.1.1",
    "@polkadot/api-augment": "^12.1.1",
    "@polkadot/api-base": "^12.1.1",
    "@polkadot/api-derive": "^12.1.1",
    "@polkadot/keyring": "^12.6.2",
    "@polkadot/rpc-augment": "^12.1.1",
    "@polkadot/rpc-core": "^12.1.1",
    "@polkadot/rpc-provider": "^12.1.1",
    "@polkadot/typegen": "^14.3.1",
    "@polkadot/types": "^12.1.1",
    "@polkadot/types-augment": "^12.1.1",
    "@polkadot/types-codec": "^12.1.1",
    "@polkadot/types-create": "^12.1.1",
    "@polkadot/types-known": "^12.1.1",
    "@polkadot/util": "^12.6.2",
    "@polkadot/util-crypto": "^12.6.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "turbo": "^2.2.3",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "(.*\\.api\\.ts$)",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ]
  }
}
